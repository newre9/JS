import java.util.Scanner;
public class Randevu {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		int key=0;
		while(key==0) {
			System.out.println("bir seçim yapın");
			System.out.println(">>>>>>>>>>>>>>>>>>>>");
			System.out.println("çıkış  -0- ");
			System.out.println("randevu  -1- ");
			System.out.println("Doktor -2- ");
			System.out.println("Admin -3- ");
			System.out.println(">>>>>>>>>>>>>>>>>>>>");
			int secim=input.nextInt();
			switch(secim) {
			case 0:
				System.out.println("sistemden çıkış yaptınız");
				key=1;
				break;
			case 1:
				System.out.println("randevu alan");
			break;
			case 2:
				System.out.println("Doktor alan");
				break;
			case 3:
				System.out.println("Admin alan");
				break;
			
			}
			
			
		}

	}

}
