import java.util.Scanner;
import java.util.ArrayList;
public class Randevu {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		ArrayList<String> list= new ArrayList<String>();
		ArrayList<String> list1= new ArrayList<String>();
		int key=5;
		while(key==5) {
			System.out.println(">>>>>>>>>>>>>>>>>>>>");
			System.out.println("bir seçim yapın");
			System.out.println(">>>>>>>>>>>>>>>>>>>>");
			System.out.println("-0- çıkış   ");
			System.out.println("-1- randevu al   ");
			System.out.println("-2- Doktor sayfası  ");
			System.out.println("-3- Admin sayfası  ");
			System.out.println(">>>>>>>>>>>>>>>>>>>>");
		String secim=input.nextLine();
			switch(secim) {
			case "0":
				
				key=0;
				break;
			case "1":
				System.out.println("isminiz ");
				String  isim=input.nextLine();
				list.add(isim);
				System.out.println("sistemden çıkış için -0- MENU için 5");
				int  secimm=input.nextInt();
				key=secimm;
				
			break;
			case "2":
				System.out.println("Doktor alan");
				System.out.println(list);
				System.out.println("sistemden çıkış için -0- MENU için 5");
				int  secimmm=input.nextInt();
				key=secimmm;
				break;
			case "3":
				System.out.println("Admin alan");
				break;
			
			}
			
			
		}
		System.out.println("sistemden çıkış yaptınız");

	}

}
