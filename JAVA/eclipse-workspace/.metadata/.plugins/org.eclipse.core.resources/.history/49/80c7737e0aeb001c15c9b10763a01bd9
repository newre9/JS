import java.util.Scanner;

public class Modifier {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		   
	       System.out.println("1. sinavi girin lutfen ");
	       float sn1=input.nextFloat();
	       System.out.println("2. sinavi girin lutfen  ");
	       float sn2=input.nextFloat();
	       System.out.println("3. sinavi girin lutfen  ");
	       float sn3=input.nextFloat();
	       
	       CalExxam(sn1,sn2,sn3);
	    }
	    
	    static void CalExxam(float exam1,float exam2,float exam3){
	        double result=((exam1*0.3)+(exam2*0.3)+(exam3*0.4));
	        System.out.println("sonuc: "+" "+result); 
	        if(result>=50){
	           System.out.println("\nSinavdan gectiniz  "); 
	        }else{
	            System.out.println("kaldiniz   ");
	            
	        }
	        
	    }

}
